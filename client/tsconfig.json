{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false
  },
  "filesGlob": [
    "./src/**/*.ts",
    "./../data/**/*.ts",
    "!./node_modules",
    "!./jspm_packages",
    "./typings/tsd.d.ts"
  ],
  "files": [
    "./src/app.ts",
    "./typings/tsd.d.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": true
  }
}
